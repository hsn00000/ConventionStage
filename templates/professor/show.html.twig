{% extends 'base.html.twig' %}

{% block title %}Dashboard Professeur - {{ professor.firstname }} {{ professor.lastname }}{% endblock %}

{% block content %}
    <main class="container py-5">

        {# --- En-t√™te du Dashboard --- #}
        <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
            <h1 class="h2 mb-0 text-primary">Tableau de Bord Professeur</h1>
            <p class="text-muted mb-0">Bienvenue, {{ professor.firstname }} {{ professor.lastname }}</p>
        </div>

        {# --- Messages Flash (Alerte Visuelle) --- #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        {% for message in app.flashes('warning') %}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {# --- 1. Cartes de M√©triques Cl√©s (KPIs) --- #}
        <div class="row mb-5 g-4">

            {# KPI 1: Conventions en Attente (Urgent) #}
            <div class="col-md-4">
                <div class="card shadow-sm border-danger border-3 rounded-3 h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <span class="fs-1 me-3 text-danger">üö®</span>
                            <div>
                                <h6 class="card-subtitle mb-2 text-danger text-uppercase small fw-bold">Action Requise</h6>
                                <h3 class="card-title mb-0">{{ pending_validation_count }} Conventions</h3>
                            </div>
                        </div>
                        <p class="mt-3 mb-0 text-muted small">Cliquer ci-dessous pour voir la liste √† valider.</p>
                    </div>
                </div>
            </div>

            {# KPI 2: Conventions Actives #}
            <div class="col-md-4">
                <div class="card shadow-sm border-success border-3 rounded-3 h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <span class="fs-1 me-3 text-success">‚úÖ</span>
                            <div>
                                <h6 class="card-subtitle mb-2 text-success text-uppercase small fw-bold">Suivi en Cours</h6>
                                <h3 class="card-title mb-0">{{ active_contracts_count }} Conventions Actives</h3>
                            </div>
                        </div>
                        <p class="mt-3 mb-0 text-muted small">Nombre de stages en cours de d√©roulement.</p>
                    </div>
                </div>
            </div>

            {# KPI 3: √âtudiants Supervis√©s #}
            <div class="col-md-4">
                <div class="card shadow-sm border-primary border-3 rounded-3 h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <span class="fs-1 me-3 text-primary">üéì</span>
                            <div>
                                <h6 class="card-subtitle mb-2 text-primary text-uppercase small fw-bold">Vos R√©f√©rents</h6>
                                <h3 class="card-title mb-0">{{ students_count }} √âtudiants</h3>
                            </div>
                        </div>
                        <p class="mt-3 mb-0 text-muted small">Nombre total d'√©tudiants dont vous √™tes r√©f√©rent.</p>
                    </div>
                </div>
            </div>

        </div>

        {# --- 2. Section: Conventions √† Valider (La plus importante) --- #}
        <div class="row mb-5">
            <div class="col-12">
                <div class="card shadow rounded-3 border-danger">
                    <div class="card-header bg-danger text-white p-3">
                        <h4 class="mb-0">üö® Conventions N√©cessitant Votre Validation ({{ pending_validation_count }})</h4>
                    </div>

                    <div class="card-body p-0">
                        {% if pending_validation_count == 0 %}
                            {# Style am√©lior√© pour l'alerte verte #}
                            <div class="p-4 bg-light-subtle rounded-bottom text-center">
                                <span class="text-success fs-4 me-2">üëç</span>
                                <span class="fw-bold text-success">Toutes les conventions urgentes ont √©t√© trait√©es. Bon travail !</span>
                            </div>
                        {% else %}
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="table-light">
                                    <tr>
                                        <th class="py-3 px-3">ID</th>
                                        <th class="py-3 px-3">√âtudiant</th>
                                        <th class="py-3 px-3">Entreprise</th>
                                        <th class="py-3 px-3">Statut</th>
                                        <th class="py-3 px-3" style="width: 250px;">Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for contract in contracts_to_validate %}
                                        {% if contract.status == 'A valider Prof' %}
                                            <tr class="alert-danger-subtle">
                                                <td class="px-3">#{{ contract.id }}</td>
                                                <td class="px-3">
                                                    <span class="fw-bold">{{ contract.student.firstname }} {{ contract.student.lastname }}</span>
                                                </td>
                                                <td class="px-3">{{ contract.organisation.name }}</td>
                                                <td class="px-3">
                                                    <span class="badge bg-danger fw-bold py-2">ACTION REQUISE</span>
                                                </td>
                                                <td class="px-3">
                                                    {# Bouton de Validation (POST) #}
                                                    <form method="POST" action="{{ path('app_professor_contract_validate', {'id': contract.id}) }}" style="display: inline-block;" onsubmit="return confirm('Confirmez-vous la VALIDATION de cette convention ?');">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('validate' ~ contract.id) }}">
                                                        <button type="submit" class="btn btn-sm btn-success me-2">Valider</button>
                                                    </form>

                                                    {# Bouton de Refus (POST) #}
                                                    <form method="POST" action="{{ path('app_professor_contract_refuse', {'id': contract.id}) }}" style="display: inline-block;" onsubmit="return confirm('√ätes-vous s√ªr de vouloir REFUSER cette convention ?');">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('refuse' ~ contract.id) }}">
                                                        <button type="submit" class="btn btn-sm btn-outline-danger">Refuser</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        {% endif %}
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        {# --- 3. Section: Conventions en Suivi (Moins Urgent) --- #}
        <div class="row">
            <div class="col-12">
                <div class="card shadow rounded-3">
                    <div class="card-header bg-light p-3">
                        <h4 class="mb-0 text-secondary">Conventions en Suivi (En attente d'autres acteurs)</h4>
                    </div>
                    <div class="card-body p-0">
                        {% set pending_follow_up = contracts_to_validate|filter(c => c.status != 'A valider Prof') %}

                        {% if pending_follow_up is empty %}
                            <div class="alert alert-info m-3 mb-0" role="alert">
                                Aucune convention en attente de l'entreprise ou de l'√©tudiant.
                            </div>
                        {% else %}
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="table-light">
                                    <tr>
                                        <th class="py-3 px-3">ID</th>
                                        <th class="py-3 px-3">√âtudiant</th>
                                        <th class="py-3 px-3">Entreprise</th>
                                        <th class="py-3 px-3">Statut</th>
                                        <th class="py-3 px-3">Progression</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for contract in pending_follow_up %}
                                        <tr>
                                            <td class="px-3">#{{ contract.id }}</td>
                                            <td class="px-3">{{ contract.student.firstname }} {{ contract.student.lastname }}</td>
                                            <td class="px-3">{{ contract.organisation.name }}</td>
                                            <td class="px-3">
                                                {% set badge_color = 'warning-subtle text-warning' %}
                                                {% if contract.status == 'Brouillon' %}{% set badge_color = 'secondary-subtle text-secondary' %}
                                                {% elseif contract.status == 'En attente entreprise' %}{% set badge_color = 'info-subtle text-info' %}
                                                {% endif %}
                                                <span class="badge bg-{{ badge_color }} fw-bold py-2">{{ contract.status|upper }}</span>
                                            </td>
                                            <td class="px-3">
                                                <a href="#" class="btn btn-sm btn-outline-secondary">D√©tails/Rappel</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        {# --- 4. Section: Mon Profil (Informations D√©taill√©es) --- #}
        <div class="card shadow-sm mt-5 rounded-3">
            <div class="card-header bg-light p-3">
                <h4 class="mb-0 text-secondary">Mon Profil & S√©curit√©</h4>
            </div>
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <p><strong>Nom :</strong> {{ professor.lastname }}</p>
                        <p><strong>Pr√©nom :</strong> {{ professor.firstname }}</p>
                        <p><strong>Email :</strong> {{ professor.email }}</p>
                    </div>
                    <div class="col-md-6 text-md-end">
                        {# Remplacement du bouton "Modifier mes informations" par "Modifier le mot de passe" #}
                        {# La route app_forgot_password_request renvoie vers le formulaire de demande de r√©initialisation. #}
                        <a href="{{ path('app_forgot_password_request') }}" class="btn btn-warning">
                            Modifier le mot de passe
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </main>
{% endblock %}
