{# templates/admin/level/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Administration des Classes{% endblock %}

{% block content %}
    <div class="container py-5">

        {# Header de page #}
        <div class="d-flex justify-content-between align-items-end mb-4">
            <div>
                <h1 class="h3 fw-bold text-dark mb-1">Paramétrage des Classes</h1>
                <p class="text-muted mb-0">Gérez la structure pédagogique et les référents.</p>
            </div>
            <a href="{{ path('app_admin_level_new') }}" class="btn btn-primary shadow-sm">
                <i class="fas fa-plus me-2"></i> Ajouter une classe
            </a>
        </div>

        {# Messages Flash #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success border-0 shadow-sm mb-4 d-flex align-items-center">
                <i class="fas fa-check-circle me-3 fs-4"></i>
                <div>{{ message }}</div>
            </div>
        {% endfor %}

        {# Tableau SaaS #}
        <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                        <tr>
                            <th class="py-3 ps-4 text-uppercase text-secondary small fw-bold" style="width: 15%;">Code</th>
                            <th class="py-3 text-uppercase text-secondary small fw-bold">Libellé</th>
                            <th class="py-3 text-uppercase text-secondary small fw-bold">Professeur Référent</th>
                            <th class="py-3 pe-4 text-end text-uppercase text-secondary small fw-bold" style="width: 20%;">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for level in levels %}
                            <tr>
                                {# Code #}
                                <td class="ps-4">
                                <span class="badge bg-white text-primary border border-primary-subtle rounded-pill px-3 py-2 shadow-sm">
                                    {{ level.levelCode }}
                                </span>
                                </td>

                                {# Libellé #}
                                <td class="fw-medium text-dark">
                                    {{ level.levelName }}
                                </td>

                                {# Professeur #}
                                <td>
                                    {% if level.mainProfessor %}
                                        <div class="d-flex align-items-center">
                                            <div class="rounded-circle bg-primary-subtle text-primary d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px; font-weight: bold; font-size: 0.8rem;">
                                                {{ level.mainProfessor.firstname|first }}{{ level.mainProfessor.lastname|first }}
                                            </div>
                                            <div>
                                                <span class="d-block text-dark small fw-bold">{{ level.mainProfessor.firstname }} {{ level.mainProfessor.lastname }}</span>
                                                <span class="d-block text-muted small" style="font-size: 0.75rem;">{{ level.mainProfessor.email }}</span>
                                            </div>
                                        </div>
                                    {% else %}
                                        <span class="badge bg-light text-secondary border">Non assigné</span>
                                    {% endif %}
                                </td>

                                {# Actions #}
                                <td class="text-end pe-4">
                                    <div class="d-flex justify-content-end gap-2">
                                        {# Bouton Modifier #}
                                        <a href="{{ path('app_admin_level_edit', {'id': level.id}) }}"
                                           class="btn btn-sm btn-outline-secondary d-flex align-items-center"
                                           title="Modifier les informations">
                                            <i class="fas fa-pen me-1"></i> Modifier
                                        </a>

                                        {# Bouton Supprimer avec Confirmation #}
                                        <form method="post" action="{{ path('app_admin_level_delete', {'id': level.id}) }}"
                                              onsubmit="return confirm('⚠️ ATTENTION !\n\nÊtes-vous sûr de vouloir supprimer la classe {{ level.levelCode }} ?\n\nCette action est irréversible et pourrait impacter les étudiants liés.');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ level.id) }}">
                                            <button class="btn btn-sm btn-danger bg-opacity-10 text-danger border-danger border-opacity-25 d-flex align-items-center hover-danger-solid">
                                                <i class="fas fa-trash-alt me-1"></i> Supprimer
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center py-5">
                                    <div class="mb-3 text-muted opacity-50">
                                        <i class="fas fa-school fa-3x"></i>
                                    </div>
                                    <h6 class="fw-bold text-secondary">Aucune classe configurée</h6>
                                    <p class="text-muted small mb-3">Commencez par ajouter les classes pour permettre aux étudiants de s'inscrire.</p>
                                    <a href="{{ path('app_admin_level_new') }}" class="btn btn-sm btn-primary">Ajouter une classe</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('app_home') }}" class="text-decoration-none text-muted hover-primary small">
                <i class="fas fa-arrow-left me-1"></i> Retour au tableau de bord général
            </a>
        </div>
    </div>

    <style>
        /* Petit effet CSS pour le bouton supprimer : fond rouge au survol */
        .hover-danger-solid:hover {
            background-color: #dc3545 !important; /* Bootstrap danger red */
            color: white !important;
            border-color: #dc3545 !important;
        }
    </style>
{% endblock %}
