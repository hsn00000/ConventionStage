{% extends 'base.html.twig' %}

{% block title %}Connexion - Conventio{% endblock %}

{% block body %}
    <main class="container-fluid d-flex align-items-center justify-content-center min-vh-100 py-5">
        {# Conteneur principal de la double colonne, agrandi et arrondi #}
        <div class="row w-100 shadow-lg bg-white rounded-4 overflow-hidden" style="max-width: 1400px; min-height: 85vh;">

            {# ----------------------------------------------------- #}
            {# COLONNE 1 : Le Formulaire de Connexion (Gauche) #}
            {# Bordure à droite pour séparer visuellement le formulaire de l'image #}
            <div class="col-12 col-lg-6 d-flex flex-column justify-content-center p-4 p-md-5 border-end">

                <h1 class="h3 mb-4 text-center text-lg-start">Connectez-vous à Conventio</h1>

                {# Affichage des messages de sécurité (Erreur ou Utilisateur connecté) #}
                {% if error %}
                    <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="alert alert-success mb-3 text-center">
                        Vous êtes connecté en tant que **{{ app.user.userIdentifier }}**.
                        <a href="{{ path('app_logout') }}">Se déconnecter</a>
                    </div>
                {% endif %}

                {# Formulaire de Connexion #}
                <form method="post" class="mx-auto w-100" style="max-width: 380px;">

                    <div class="form-floating mb-3">
                        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus placeholder="Adresse email">
                        <label for="username">Email</label>
                    </div>

                    <div class="form-floating mb-4">
                        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required placeholder="Mot de passe">
                        <label for="password">Mot de passe</label>
                    </div>

                    <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                    {# Section 'Mot de passe oublié' #}
                    <div class="mb-4 text-end">
                        <a href="{{ path('app_forgot_password_request') }}" class="text-decoration-none">Mot de passe oublié ?</a>
                    </div>

                    <button class="btn btn-lg btn-primary w-100" type="submit">
                        Se connecter
                    </button>
                </form>

                {# Lien vers la page d'inscription #}
                <div class="mt-4 text-center">
                    <p class="text-muted">
                        Pas encore inscrit ?
                        <a href="{{ path('app_register_student') }}" class="text-decoration-none">Étudiant</a> ou
                        <a href="{{ path('app_register_professor') }}" class="text-decoration-none">Professeur</a>
                    </p>
                </div>

            </div>

            {# ----------------------------------------------------- #}
            {# COLONNE 2 : L'Image/Illustration (Droite) #}
            {# Utilisation du bleu comme couleur principale #}
            <div class="col-12 col-lg-6 d-none d-lg-flex flex-column justify-content-center align-items-center p-5 text-white rounded-end-4"
                 style="background-color: #007bff; background-image: url('{{ asset('img/themeBlue.png') }}'); background-size: cover; background-position: center;">

            </div>

        </div>
    </main>
{% endblock %}
