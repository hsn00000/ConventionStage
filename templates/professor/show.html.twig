{% extends 'base.html.twig' %}

{% block title %}Dashboard Professeur - {{ professor.firstname }} {{ professor.lastname }}{% endblock %}

{% block content %}
    <main class="container py-5">

        {# --- En-t√™te du Dashboard --- #}
        <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
            <h1 class="h2 mb-0 text-primary">Tableau de Bord Professeur</h1>
            <p class="text-muted mb-0">Bienvenue, {{ professor.firstname }} {{ professor.lastname }}</p>
        </div>

        {# --- Messages Flash --- #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {# --- 1. Cartes de M√©triques Cl√©s (KPIs) --- #}
        <div class="row mb-5 g-4">
            {# KPI 1: Conventions en Attente #}
            <div class="col-md-4">
                <div class="card shadow-sm border-warning border-3 rounded-3 h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <span class="fs-1 me-3 text-warning">üö®</span>
                            <div>
                                <h6 class="card-subtitle mb-2 text-warning text-uppercase small fw-bold">√Ä Valider</h6>
                                <h3 class="card-title mb-0">{{ pending_validation_count }} Conventions</h3>
                            </div>
                        </div>
                        <p class="mt-3 mb-0 text-muted small">En attente de votre signature.</p>
                    </div>
                </div>
            </div>

            {# KPI 2: Conventions Actives #}
            <div class="col-md-4">
                <div class="card shadow-sm border-success border-3 rounded-3 h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <span class="fs-1 me-3 text-success">‚úÖ</span>
                            <div>
                                <h6 class="card-subtitle mb-2 text-success text-uppercase small fw-bold">Valid√©es</h6>
                                <h3 class="card-title mb-0">{{ active_contracts_count }} Conventions</h3>
                            </div>
                        </div>
                        <p class="mt-3 mb-0 text-muted small">Stages valid√©s par le professeur.</p>
                    </div>
                </div>
            </div>

            {# KPI 3: √âtudiants Supervis√©s #}
            <div class="col-md-4">
                <div class="card shadow-sm border-primary border-3 rounded-3 h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <span class="fs-1 me-3 text-primary">üéì</span>
                            <div>
                                <h6 class="card-subtitle mb-2 text-primary text-uppercase small fw-bold">Vos √âtudiants</h6>
                                <h3 class="card-title mb-0">{{ students_count }} √âtudiants</h3>
                            </div>
                        </div>
                        <p class="mt-3 mb-0 text-muted small">Nombre total d'√©tudiants sous votre responsabilit√©.</p>
                    </div>
                </div>
            </div>
        </div>

        {# --- 2. Section: Conventions √† Valider (Workflow) --- #}
        <div class="row mb-5">
            <div class="col-12">
                <div class="card shadow rounded-3 border-warning">
                    <div class="card-header bg-warning text-dark p-3">
                        <h4 class="mb-0 fs-5"><i class="fas fa-file-signature me-2"></i>Conventions en attente de validation</h4>
                    </div>

                    <div class="card-body p-0">
                        {% if pending_validation_count == 0 %}
                            <div class="p-5 text-center text-muted">
                                <i class="fas fa-check-circle fs-1 text-success mb-3"></i>
                                <p class="mb-0">Aucune convention en attente pour le moment.</p>
                            </div>
                        {% else %}
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="table-light">
                                    <tr>
                                        <th class="px-4">√âtudiant</th>
                                        <th class="px-4">Entreprise</th>
                                        <th class="px-4">Statut</th>
                                        <th class="text-end px-4">Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for contract in contracts_to_validate %}
                                        {# On affiche uniquement celles qui sont √† l'√©tape 'filled_by_company' #}
                                        {% if contract.status == 'filled_by_company' %}
                                            <tr>
                                                <td class="px-4 fw-bold">
                                                    {{ contract.student.firstname }} {{ contract.student.lastname }}
                                                </td>
                                                <td class="px-4">{{ contract.organisation.name }}</td>
                                                <td class="px-4">
                                                    <span class="badge bg-warning text-dark">√Ä valider</span>
                                                </td>
                                                <td class="px-4 text-end">
                                                    <a href="{{ path('app_professor_validate_contract', {'id': contract.id}) }}" class="btn btn-sm btn-primary">
                                                        Examiner la demande
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endif %}
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        {# --- 3. Section: Historique et Suivi --- #}
        <div class="row">
            <div class="col-12">
                <div class="card shadow rounded-3">
                    <div class="card-header bg-light p-3">
                        <h4 class="mb-0 fs-5 text-secondary">Toutes les Conventions</h4>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                <tr>
                                    <th class="px-4">ID</th>
                                    <th class="px-4">√âtudiant</th>
                                    <th class="px-4">Entreprise</th>
                                    <th class="px-4">Statut Actuel</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for contract in all_coordinated_contracts %}
                                    <tr>
                                        <td class="px-4 text-muted">#{{ contract.id }}</td>
                                        <td class="px-4">{{ contract.student.firstname }} {{ contract.student.lastname }}</td>
                                        <td class="px-4">{{ contract.organisation.name }}</td>
                                        <td class="px-4">
                                            {# Affichage conditionnel des badges selon le statut technique #}
                                            {% if contract.status == 'Brouillon' %}
                                                <span class="badge bg-secondary">Brouillon</span>
                                            {% elseif contract.status == 'filled_by_company' %}
                                                <span class="badge bg-warning text-dark">√Ä valider</span>
                                            {% elseif contract.status == 'validated_by_prof' %}
                                                <span class="badge bg-success">Valid√©e</span>
                                            {% elseif contract.status == 'refused' or contract.status == 'refuse_subject' %}
                                                <span class="badge bg-danger">Refus√©e</span>
                                            {% else %}
                                                <span class="badge bg-light text-dark border">{{ contract.status }}</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4" class="text-center py-4 text-muted">Aucune convention trouv√©e.</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# --- 4. Profil --- #}
        <div class="card shadow-sm mt-5 rounded-3 mb-5">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1">{{ professor.firstname }} {{ professor.lastname }}</h5>
                    <p class="text-muted mb-0">{{ professor.email }}</p>
                </div>
                <a href="{{ path('app_forgot_password_request') }}" class="btn btn-outline-secondary">
                    Modifier mot de passe
                </a>
            </div>
        </div>

    </main>
{% endblock %}
