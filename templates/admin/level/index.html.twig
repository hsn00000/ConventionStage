{% extends 'base.html.twig' %}

{% block title %}Gestion des Classes{% endblock %}

{% block content %}
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3">Paramétrage des Classes (Formations)</h1>
            <a href="{{ path('app_admin_level_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Ajouter une classe
            </a>
        </div>

        {# Messages Flash #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                    <tr>
                        <th class="ps-4">Code</th>
                        <th>Libellé</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for level in levels %}
                        <tr>
                            <td class="ps-4 fw-bold">{{ level.levelCode }}</td>
                            <td>{{ level.levelName }}</td>
                            <td class="text-end pe-4">
                                <a href="{{ path('app_admin_level_edit', {'id': level.id}) }}" class="btn btn-sm btn-outline-secondary me-1">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="post" action="{{ path('app_admin_level_delete', {'id': level.id}) }}" style="display: inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette classe ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ level.id) }}">
                                    <button class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center py-4">Aucune classe paramétrée.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3">
            <a href="{{ path('app_home') }}" class="text-decoration-none text-muted">
                <i class="fas fa-arrow-left"></i> Retour à l'accueil
            </a>
        </div>
    </div>
{% endblock %}
