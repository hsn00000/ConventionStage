{% extends 'base.html.twig' %}

{% block title %}Tutor{% endblock %}

{% block body %}
    <h1>Tutor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tutor.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ tutor.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ tutor.roles ? tutor.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ tutor.password }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tutor.name }}</td>
            </tr>
            <tr>
                <th>TelMobile</th>
                <td>{{ tutor.telMobile }}</td>
            </tr>
            <tr>
                <th>TelOther</th>
                <td>{{ tutor.telOther }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_tutor_index') }}">back to list</a>

    <a href="{{ path('app_tutor_edit', {'id': tutor.id}) }}">edit</a>

    {{ include('tutor/_delete_form.html.twig') }}
