{% extends 'base.html.twig' %}

{% block title %}Connexion - Conventio{% endblock %}

{# Utilisation de 'block content' au lieu de 'block body' pour conserver la Navbar #}
{% block content %}
    <main class="container-fluid d-flex align-items-center justify-content-center min-vh-100 py-5">
        {# Conteneur principal #}
        <div class="row w-100 shadow-lg bg-white rounded-4 overflow-hidden" style="max-width: 1400px; min-height: 85vh;">

            {# ----------------------------------------------------- #}
            {# COLONNE 1 : Formulaire (Gauche) #}
            <div class="col-12 col-lg-6 d-flex flex-column p-5 border-end justify-content-center">

                <h1 class="h3 mb-4 text-center">Connectez-vous à Conventio</h1>

                {# --- ZONE DES MESSAGES FLASH (Confirmation Email, etc.) --- #}
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success mb-4 text-center shadow-sm" role="alert">
                        <i class="fas fa-check-circle me-2"></i> {{ message }}
                    </div>
                {% endfor %}

                {% for message in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger mb-4 text-center shadow-sm" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i> {{ message }}
                    </div>
                {% endfor %}

                {# Messages d'erreur de connexion #}
                {% if error %}
                    <div class="alert alert-danger text-center" role="alert">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {% if app.user %}
                    <div class="alert alert-info mb-3 text-center">
                        Vous êtes déjà connecté en tant que <strong>{{ app.user.userIdentifier }}</strong>.<br>
                        <a href="{{ path('app_logout') }}" class="alert-link">Se déconnecter</a>
                    </div>
                {% endif %}
                {# ---------------------------------------------------------- #}

                {# Formulaire de Connexion #}
                <form method="post" class="mx-auto w-100 mt-3" style="max-width: 380px;">

                    <div class="form-floating mb-3">
                        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus placeholder="Adresse email">
                        <label for="username">Email</label>
                    </div>

                    <div class="form-floating mb-4">
                        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required placeholder="Mot de passe">
                        <label for="password">Mot de passe</label>
                    </div>

                    <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                    <div class="mb-4 text-end">
                        <a href="{{ path('app_forgot_password_request') }}" class="text-decoration-none small">Mot de passe oublié ?</a>
                    </div>

                    <button class="btn btn-lg btn-primary w-100 shadow-sm" type="submit">
                        Se connecter
                    </button>
                </form>

                <div class="mt-4 text-center">
                    <p class="text-muted small">
                        Pas encore inscrit ?<br>
                        <a href="{{ path('app_register_student') }}" class="fw-bold text-decoration-none">Étudiant</a> ou
                        <a href="{{ path('app_register_professor') }}" class="fw-bold text-decoration-none">Professeur</a>
                    </p>
                </div>

            </div>

            {# ----------------------------------------------------- #}
            {# COLONNE 2 : Image (Droite) #}
            <div class="col-12 col-lg-6 d-none d-lg-block p-0"
                 style="background-color: #007bff; background-image: url('{{ asset('img/themebleu.jpg') }}'); background-size: cover; background-position: center;">
                {# L'image couvre toute la hauteur grâce à d-lg-block et p-0 #}
            </div>

        </div>
    </main>
{% endblock %}
