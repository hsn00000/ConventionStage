{% extends 'base.html.twig' %}

{% block title %}Modifier mon Profil - {{ student.firstname }} {{ student.lastname }}{% endblock %}

{% block content %}
    <main class="container d-flex justify-content-center align-items-center py-5" style="min-height: 90vh;">

        {# Conteneur du Formulaire centré et stylisé #}
        <div class="row w-100 justify-content-center">
            <div class="col-md-9 col-lg-7 col-xl-6">
                <div class="card shadow-lg border-0 rounded-4">

                    {# Entête #}
                    <div class="card-header bg-primary text-white text-center rounded-top-4 p-3">
                        <h1 class="h3 mb-0"><i class="fas fa-user-edit me-2"></i> Modifier mon Profil</h1>
                    </div>

                    <div class="card-body p-4 p-md-5">

                        <p class="text-muted mb-4 text-center">
                            Mettez à jour vos informations personnelles et académiques.
                        </p>

                        {# Inclusion du formulaire avec le bouton mis à jour #}
                        {{ include('student/_form.html.twig', {
                            'button_label': 'Enregistrer les modifications',
                            'form': form
                        }) }}

                        <hr class="my-4">

                        {# Options de navigation #}
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('app_student_show', {'id': student.id}) }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Retour au Dashboard
                            </a>

                            {# Bouton de Suppression (stylé en rouge à droite) #}
                            <div class="ms-auto">
                                {{ include('student/_delete_form.html.twig') }}
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </main>
{% endblock %}
