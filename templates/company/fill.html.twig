{% extends 'base.html.twig' %}

{% block title %}Compléter la convention{% endblock %}

{% block body %}
    <div class="container my-5">

        <div class="mb-4">
            <h2>Convention de Stage</h2>
            <p class="text-muted">Veuillez vérifier et compléter les informations ci-dessous.</p>
        </div>

        {{ form_start(form) }}

        <div class="row g-5">

            {# --- COLONNE GAUCHE : LES CONTACTS --- #}
            <div class="col-lg-6">
                <h4 class="mb-3 border-bottom pb-2">1. Informations Administratives</h4>

                <div class="mb-4">
                    <h5 class="text-primary h6">L'Entreprise</h5>
                    {# Affiche tous les champs de l'organisation #}
                    {{ form_widget(form.organisation) }}
                </div>

                <div class="mb-4">
                    <h5 class="text-success h6">Le Tuteur</h5>
                    {# Affiche les champs du tuteur #}
                    {{ form_widget(form.tutor) }}
                </div>
            </div>

            {# --- COLONNE DROITE : LE STAGE --- #}
            <div class="col-lg-6">
                <h4 class="mb-3 border-bottom pb-2">2. Le Stage</h4>

                <div class="mb-4">
                    <label class="form-label fw-bold">Missions et Compétences</label>
                    {{ form_widget(form.plannedActivities, {'attr': {'rows': 6, 'class': 'form-control bg-light'}}) }}
                </div>

                <div class="mb-4 p-3 bg-light rounded">
                    <h5 class="h6 mb-3">Logistique & Financements</h5>

                    {# Case à cocher pour la Gratification #}
                    <div class="mb-3" id="bonus-checkbox-row">
                        {{ form_row(form.bonus) }}
                    </div>

                    {# Champ de montant conditionnel #}
                    {# ATTENTION : J'utilise form.bonusAmount. Si ce n'est pas le nom du champ, le corriger. #}
                    <div id="bonus-amount-field" style="display:none;">
                        {{ form_row(form.bonusAmount, {'label': 'Montant de la gratification (Net, par mois)'}) }}
                    </div>

                    {# Autres options logistiques #}
                    <div class="mb-2">{{ form_row(form.deplacement) }}</div>
                    <div class="mb-2">{{ form_row(form.transportFreeTaken) }}</div>
                    <div class="mb-2">{{ form_row(form.lunchTaken) }}</div>
                    <div class="mb-0">{{ form_row(form.hostTaken) }}</div>
                </div>
            </div>
        </div>

        {# --- SECTION HORAIRES (Pleine largeur) --- #}
        <div class="row mt-4">
            <div class="col-12">
                <h4 class="mb-3 border-bottom pb-2">3. Horaires de présence</h4>
                {{ form_widget(form.workHours) }}
            </div>
        </div>

        <div class="mt-5 text-end">
            <button type="submit" class="btn btn-primary btn-lg px-5">
                Valider la convention
            </button>
        </div>

        {{ form_end(form) }}
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // 1. Définir les éléments
            const bonusCheckbox = document.getElementById('contract_bonus'); // ID du checkbox "Une gratification est-elle prévue ?"
            const bonusAmountField = document.getElementById('bonus-amount-field'); // Conteneur du champ de montant

            if (bonusCheckbox && bonusAmountField) {

                // 2. Fonction pour mettre à jour l'affichage
                function updateBonusFieldVisibility() {
                    if (bonusCheckbox.checked) {
                        bonusAmountField.style.display = 'block';
                    } else {
                        bonusAmountField.style.display = 'none';
                    }
                }

                // 3. Écouter le changement sur le checkbox
                bonusCheckbox.addEventListener('change', updateBonusFieldVisibility);

                // 4. Initialiser l'affichage au chargement de la page (important si l'utilisateur revient en arrière)
                updateBonusFieldVisibility();
            }
        });
    </script>

{% endblock %}
